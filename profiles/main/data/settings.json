{
    "workbench.startupEditor": "none",
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.enabled": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "onFocusChange",
    "editor.tabSize": 2,
    "http.proxyAuthorization": null,
    "redhat.telemetry.enabled": false,
    "editor.wordWrap": "on",
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "files.trimTrailingWhitespace": true,
    "update.mode": "none",
    "vs-kubernetes": {
        "disable-linters": [
            "resource-limits"
        ],
        "vs-kubernetes.crd-code-completion": "disabled",
        "vscode-kubernetes.minikube-path-linux": "/home/stephan/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },
    "syncSettings.additionalFiles": [

    ],
    "quitControl.closeTabShouldTryToCloseEmptyWindow": false,
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
    "go.toolsManagement.autoUpdate": true,
    "git.openRepositoryInParentFolders": "never",
    "update.showReleaseNotes": false,
    "window.zoomLevel": 2,
    "files.exclude": {
        "**/.git": false
    },
    "syncSettings.crons": {
        "review": "0 * * * *",      // every hour
        "download": "0 9 * * *",    // at 9AM, every day
        "upload": "0 17 * * *"      // at 5PM, every day
    },
    "workbench.editor.empty.hint": "hidden",
    "cSpell.spellCheckDelayMs": 1000,
    "cSpell.suggestionsTimeout": 1000
}